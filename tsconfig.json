{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "disableSizeLimit": true
  }
}